<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="2.8"
            android:id="@+id/productimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </ImageView>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/productname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:ellipsize="end"
                android:lines="1"
                android:padding="5dp"
                android:textStyle="bold"
                tools:text="Random image name"
                tools:ignore="RtlHardcoded" />
            <LinearLayout
                android:id="@+id/quLayout"
                android:visibility="invisible"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/productquantity" />
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="kg"
                    android:id="@+id/cartmeasure" />
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="280"
                    android:drawableLeft="@drawable/rupee"
                    android:id="@+id/vendoreprice" />

                <TextView
                    android:id="@+id/pdiscprice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/rupee"
                    android:gravity="center"
                    android:text="100"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/prices"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                style="@style/SpinnerTheme"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/calculation"
                    android:background="@drawable/addbuttonback"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="70dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/minus"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_remove_black_24dp" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/plus"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/quantity"
                        android:background="@drawable/ic_add_black_24dp"
                        android:clickable="true"
                        android:focusable="false" />
                </LinearLayout>
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:focusable="false"
                    android:clickable="false"
                    android:background="@drawable/bg"
                    android:id="@+id/additem"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>